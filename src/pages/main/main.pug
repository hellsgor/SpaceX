extends Layouts/main-layout.pug

block variables
  - let title = 'Space X';
  - let header = true;
  - let footer = true;
  - let pageClassName = 'main-page';

block styles
  link(href=require('./main.scss') rel='stylesheet')
block content
  main.page__main(class=pageClassName)

    include Partials/first-screen/first-screen.pug
    include Partials/second-screen/second-screen.pug

    .some-stars
      include Components/stars/stars.pug

block scripts
  script(src=require('./main.js') defer)
